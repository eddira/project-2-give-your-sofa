<form class="form-container" action="/sofas/create" , method="post" enctype="multipart/form-data">
  <div class="form-div"> 
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" autocomplete="off"/>
  </div>
   <div class="form-div"> 
  <label for="picture">Picture:</label>
  <input type="file" name="picture_url" autocomplete="off"/>
  </div>
   <div class="form-div">
  <label for="description">Description:</label>
  <input type="text" id="description" name="description" autocomplete="off" />
  </div>
  {{! <label for="owner">Owner:</label><br />
  <input type="text" id="owner" name="owner" /><br /> }}
  <div>
  <input class="button" type="submit" value="Submit"/>
  </div>
</form>