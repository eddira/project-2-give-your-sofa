<form
  class="form-container"
  action="/sofas/{{oneSofa._id}}/edit"
  method="post"
  enctype="multipart/form-data"
>
  <div class="form-div">
  <label for="title">Title</label>
  <input type="text" name="title" value={{oneSofa.title}} autocomplete="off" />
  </div>
  <div class="form-div">
  <label for="description">Description</label>
  <input type="text" name="description" value={{oneSofa.description}} autocomplete="off"  />
  </div>
  <div class="form-div">
  <label for="picture">Picture</label>
  <input type="file" name="picture_url" value={{oneSofa.picture}} />
  </div>
  <div>
  <input class="button" type="submit" value="Edit Sofa" />
  </div>
</form>